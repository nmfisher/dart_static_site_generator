{% layout '_layouts/default.liquid' %}

{% block title %}{{ page.title | default: "Post Title Missing" }}{% endblock %}

{% block content %}
    <article class="post">
        <header class="post-header">
            <h1>{{ page.title | default: "Post Title Missing" }}</h1>
            {% if page.date %}
                <p class="post-meta">
                    <time datetime="{{ page.date }}">
                        {{ page.date | date: "%B %d, %Y" }}
                    </time>
                </p>
            {% endif %}
        </header>

        <div class="post-content">
            {{{ content | default: "<p>Error: No content found for this page.</p>" }}}
        </div>

    </article>
{% endblock %}