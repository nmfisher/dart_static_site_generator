<header class="site-header">
    <div class="container">
        <div class="site-title">
            <a href="/">{{ site.title | default: 'Default Site Title' }}</a>
        </div>
        <nav class="site-nav">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                {% comment %} Add more static navigation links here {% endcomment %}
                {% comment %} Or generate dynamically:
                {% for nav_item in site.navigation %}
                    <li><a href="{{ nav_item.url }}">{{ nav_item.title }}</a></li>
                {% endfor %}
                {% endcomment %}
            </ul>
        </nav>
    </div>
</header>